# Rate Limiting Configuration
# Default rate limit (for general endpoints)
RATE_LIMIT_DEFAULT_TTL=60000       # Time window in milliseconds (default: 1 minute)
RATE_LIMIT_DEFAULT_LIMIT=1000      # Max requests per time window (default: 1000)

# Auth endpoints rate limit
RATE_LIMIT_AUTH_TTL=900000         # Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_AUTH_LIMIT=20           # Max requests per time window (default: 20)

# API endpoints rate limit
RATE_LIMIT_API_TTL=60000           # Time window in milliseconds (default: 1 minute)
RATE_LIMIT_API_LIMIT=500           # Max requests per time window (default: 500)

CORS_ORIGIN="http://localhost:3000"